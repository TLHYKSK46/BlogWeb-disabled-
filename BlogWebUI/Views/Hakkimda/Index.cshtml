                    </div>
               
                </div>
                @*////////////////////////////////////////*@
                <div class="row">
                    <div class="col-3">
                        <div class="nav flex-column nav-pills " id="v-pills-tab" role="tablist" aria-orientation="vertical">
                            <a class="nav-link active" id="v-pills-home-tab" data-toggle="pill" href="#v-pills-home" role="tab" aria-controls="v-pills-home" aria-selected="true">Deneyim</a>
                            <a class="nav-link" id="v-pills-profile-tab" data-toggle="pill" href="#v-pills-profile" role="tab" aria-controls="v-pills-profile" aria-selected="false">Eğitim</a>
                            <a class="nav-link" id="v-pills-messages-tab" data-toggle="pill" href="#v-pills-messages" role="tab" aria-controls="v-pills-messages" aria-selected="false">Beceriler</a>
                            <a class="nav-link" id="v-pills-settings-tab" data-toggle="pill" href="#v-pills-settings" role="tab" aria-controls="v-pills-settings" aria-selected="false">Hobiler</a>
                            <a class="nav-link" id="v-pills-oduller-tab" data-toggle="pill" href="#v-pills-oduller" role="tab" aria-controls="v-pills-oduller" aria-selected="false">Sertifikalar&Ödüller</a>

                        </div>
                    </div>

                    @foreach (var item in Model.Hakkimda)
                    {
                        string deneyimler = item.Deneyim;
                        string deneyim;
                        string[] deneyimlist = deneyimler.Split(',');//virgüle göre ayırıcak cümleyi
                        foreach (var dene in deneyimlist)
                        {

                            deneyim = dene.ToString();

                            <div class="col-5 bg-light " style="">
                                <div class="tab-content" id="v-pills-tabContent">
                                    <div class="tab-pane fade show active" id="v-pills-home" role="tabpanel" aria-labelledby="v-pills-home-tab">&rArr;&nbsp;@deneyim.ToUpper()</div>
                                    <div class="tab-pane fade" id="v-pills-profile" role="tabpanel" aria-labelledby="v-pills-profile-tab">@item.Egitim</div>
                                    <div class="tab-pane fade" id="v-pills-messages" role="tabpanel" aria-labelledby="v-pills-messages-tab">@item.Beceriler</div>
                                    <div class="tab-pane fade" id="v-pills-settings" role="tabpanel" aria-labelledby="v-pills-settings-tab">@item.Hobiler</div>
                                    <div class="tab-pane fade" id="v-pills-oduller" role="tabpanel" aria-labelledby="v-pills-oduller-tab">@item.Sertifika_Oduller</div>

                                </div>
                            </div>
                        }
                    }
                </div>
            </div>
        }
    </div>
   

</div>
